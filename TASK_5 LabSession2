
/**
 * Program purpose: To produce a calculator 
 *
 * @author (Afizudin Firdaus)
 * @version (29th May 2024)
 */
import javax.swing.JOptionPane;
public class Calculation
{
    public static void main(String[]args)
    {
        int num1, num2, num3;
        String num, choice;
        num = JOptionPane.showInputDialog("Enter 1st number:");
        num1 = Integer.parseInt(num);
        
        num = JOptionPane.showInputDialog("Enter 2nd number:");
        num2 = Integer.parseInt(num);
        
        num = JOptionPane.showInputDialog("Enter 3rd number:");
        num3 = Integer.parseInt(num);
        
        choice = JOptionPane.showInputDialog("addition or multiplication");
        
        if(choice.equals("addition"))
       // {
            JOptionPane.showMessageDialog(null,"Answer \n" + num1 + " + " + num2 + " + " + num3 + " = " + (num1 + num2 + num3) + "", "Result", 1);
        //}
        else if(choice.equals("multiplication"))
      //  {
            JOptionPane.showMessageDialog(null,"Answer \n" + num1 + " * " + num2 + " * " + num3 + " = " + (num1 * num2 * num3) + "", "Result", 1);
        //}
        else
        //{
            JOptionPane.showMessageDialog(null,"Invalid input! Enter either addition or multiplication", "ERROR", 2);
    
       // }
    }
}
